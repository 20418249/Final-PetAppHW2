@model List<PetAppHW2.Models.Pet>

@{
    ViewData["Title"] = "ViewPets";
}

<div class="container">
    <h1>Pets</h1>
    <div class="row" style="display:block;">
        <div class="col-md-3" style="display:inline; float: left;">
            <p>Type</p>
            <select name="Type" id="TypeId" style="width:60%"></select>
            @*populate with database*@
        </div>
        <div class="col-md-3" style="display:inline; float: left;">
            <p>Breed</p>
            <select name="Breed" id="BreedId" style="width:60%"></select>
            @*populate with database*@
        </div>
        <div class="col-md-3" style="display:inline; float: left;">
            <p>Location</p>
            <select name="Location" id="LocationId" style="width:60%"></select>
            @*populate with database*@
        </div>
        <div class="col-md-3" style="display:inline; float: left;">
            <button class="btn-info" type="submit" onclick="click(1)" value="Search" style="width:50%; margin:1%;">Search</button>
            <button class="btn-info" type="submit" onclick="click(2)" value="Clear" style="width:50%; margin:1%;">Clear</button>
        </div>
    </div>

    <div class="row" style="display:inline-block;">
        @foreach (var item in Model)
        {
            <div class="card col-lg-4 col-sm-12 col-xl-4 col-md-4" style="float:left; max-width:300px; width:50%; height: 500px; outline: solid black 1px; margin:3%;">
                <img class="card-img-top" src="..." alt="Image of pet" src="" />
                @if (item.userId != null)
                {//Creates the Available or adopted text
                    <p style="color:green"> Adopted </p>
                }
                else
                {
                    <p style="color:red"> Available </p>
                }
                <div>
                    <h3 class="card-title" style="display:inline;">@item.name</h3>
                    <p style="display:inline;">@item.Gender.description</p>
                    <p>@item.Location.name , Age @item.age, @item.weight Kg</p>
                    <h6> Pet Story </h6>
                    <p>This is where the pet story should go</p>
                    @if (item.userId != null)
                    {//Creates the Available or adopted text
                        <button href="#" class="btn btn-primary disabled" style="width:100%;">View</button>
                    }
                    else
                    {
                        <button href="#" class="btn btn-primary" style="width:100%;">View</button>
                    }
                    
                </div>
            </div>
        }
    </div>
</div>


@section Scripts
{
    <script>
        function click(action)
        {
            $("#action").val(action);
        }
    </script>
}